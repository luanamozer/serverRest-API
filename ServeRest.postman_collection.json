		{
			"name": "geração de massa",
			"item": [
				{
					"name": "busca por nova pessoa",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"// capturar nome, email, senha para gerar nova pessoa/dadosde forma randomica ",
									"",
									"",
									"pm.globals.set(\"userName\", pm.response.json().results[0].name.first )",
									"pm.globals.set(\"userEmail\", pm.response.json().results[0].email)",
									"pm.globals.set(\"userPassword\", pm.response.json().results[0].login.password)"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "https://randomuser.me/api/",
							"protocol": "https",
							"host": [
								"randomuser",
								"me"
							],
							"path": [
								"api",
								""
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "usuarios",
			"item": [
				{
					"name": "novo cadastro",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"pm.globals.unset(\"schema\"); //limpa o valor variavel global",
									"",
									"pm.globals.set(\"schema\", {",
									"  \"$schema\": \"http://json-schema.org/draft-04/schema#\",",
									"  \"type\": \"object\",",
									"  \"properties\": {",
									"    \"message\": {",
									"      \"type\": \"string\"",
									"    },",
									"    \"_id\": {",
									"      \"type\": \"string\"",
									"    }",
									"  },",
									"  \"required\": [",
									"    \"message\",",
									"    \"_id\"",
									"  ]",
									"});"
								],
								"type": "text/javascript",
								"packages": {}
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Validar se o status code é 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"",
									" pm.test(\"Validar mensagem do response\", function(){",
									"    pm.expect(pm.response.json().message).to.be.eql(\"Cadastro realizado com sucesso\")   ",
									" })",
									"",
									" pm.test(\"Capturar id retornado\", function(){",
									"     pm.globals.set(\"UserId\", pm.response.json()._id)",
									"",
									" })",
									"pm.test(\"Validar schema\", function () {",
									"        pm.expect(tv4.validate(pm.response.json(), pm.globals.get(\"schema\"))).to.be.true;",
									"     ",
									"})"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"nome\": \"{{userName}}\",\n    \"email\": \"{{userEmail}}\", \n    \"password\": \"{{userPassword}}\", \n    \"administrador\": \"false\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "https://serverest.dev/usuarios",
							"protocol": "https",
							"host": [
								"serverest",
								"dev"
							],
							"path": [
								"usuarios"
							]
						}
					},
					"response": []
				},
